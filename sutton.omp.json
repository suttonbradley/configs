{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "pwd": "osc99",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "powerline",
          "template": "{{ if .SSHSession }}\ueba9 {{ .HostName }}{{ end }}",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#24221c",
          "type": "session"
        },
        {
          "properties": {
            "mapped_shell_names": {
              "pwsh": "ps"
            }
          },
          "style": "powerline",
          "foreground": "#24221c",
          "powerline_symbol": "\ue0b0",
          "background": "#87765d",
          "type": "shell"
        },
        {
          "style": "powerline",
          "template": "{{if .Env.SDXROOT}}raz{{end}}",
          "foreground": "#24221c",
          "powerline_symbol": "\ue0b0",
          "background": "#d261a5",
          "type": "text"
        },
        {
          "properties": {
            "style": "full"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "foreground": "#24221c",
          "powerline_symbol": "\ue0b0",
          "background": "#e56b55",
          "type": "path"
        },
        {
          "properties": {
            "branch_identical_icon": "\u2261",
            "cherry_pick_icon": "âœ“ ",
            "commit_icon": "\u25b7 ",
            "fetch_stash_count": false,
            "fetch_status": true,
            "merge_icon": "\u25f4 ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "\u2c62 ",
            "tag_icon": "\u25b6 "
          },
          "style": "powerline",
          "foreground": "#24221c",
          "powerline_symbol": "\ue0b0",
          "background": "#949fb4",
          "type": "git"
        },
        {
          "properties": {
            "time_format": "15:04"
          },
          "style": "powerline",
          "template": " {{ .CurrentDate | date .Format }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#d261a5",
          "type": "time"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " \ue23a{{ if gt .Code 0 }}\uf00d{{ else }}\uf42e{{ end }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#99b05f",
          "type": "exit",
          "background_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ]
        },
        {
          "properties": {
            "style": "austin",
            "threshold": 1000
          },
          "style": "powerline",
          "template": "\u231b{{ .FormattedMs }} ",
          "foreground": "#24221c",
          "powerline_symbol": "\ue0b0",
          "background": "#e56b55",
          "type": "executiontime"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
